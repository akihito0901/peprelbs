generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Spot {
  id          String   @id @default(uuid())
  name        String
  url         String?
  address     String
  prefecture  String
  lat         Float
  lng         Float
  review      String
  category    String
  images      String[]
  createdAt   DateTime @default(now())

  @@index([prefecture])
  @@index([lat, lng])
}
